<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- Validação da lista de proprietários de veículos -->
<!-- Porfírio Filipe -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="unqualified" attributeFormDefault="unqualified">
	<xs:include schemaLocation="utilType.xsd"/>
	<xs:simpleType name="carType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="Audi, A4, Ligeiro"/>
			<xs:enumeration value="VW, Golf, Ligeiro"/>
			<xs:enumeration value="Seat, Toledo, Ligeiro"/>
			<xs:enumeration value="Seat, Ibiza, Ligeiro"/>
			<xs:enumeration value="Honda, CBR 1000, Motociclo"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="AT_Matrícula">
		<xs:restriction base="xs:string">
			<xs:pattern value="[A-Z]{2}-[0-9]{2}-[0-9]{2}|[0-9]{2}-[A-Z]{2}-[0-9]{2}"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:element name="Próprio" type="AT_Nome"/>
	<xs:element name="Apelido" type="AT_Nome"/>
	<xs:element name="LPROPRIETÁRIOS">
		<xs:annotation>
			<xs:documentation>Lista de Proprietários</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element name="PROPRIETÁRIO" maxOccurs="unbounded">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="NOME">
								<xs:complexType mixed="true">
									<xs:sequence>
										<xs:element ref="Próprio" maxOccurs="unbounded"/>
										<xs:element ref="Apelido" maxOccurs="unbounded"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="CONTACTO">
								<xs:annotation>
									<xs:documentation>Contatos</xs:documentation>
								</xs:annotation>
								<xs:complexType>
									<xs:choice>
										<xs:element name="EMAIL" type="AT_emailAddress" minOccurs="1" maxOccurs="1"/>
										<xs:element name="TELEFONE" type="AT_Telefone" minOccurs="1" maxOccurs="1"/>
									</xs:choice>
								</xs:complexType>
							</xs:element>
							<xs:element name="VEÍCULO" minOccurs="0" maxOccurs="unbounded">
								<xs:annotation>
									<xs:documentation>Veiculos</xs:documentation>
								</xs:annotation>
								<xs:complexType>
									<xs:attribute name="MATRÍCULA" use="required">
										<xs:simpleType>
											<xs:restriction base="AT_Matrícula">
												<xs:length value="8"/>
											</xs:restriction>
										</xs:simpleType>
									</xs:attribute>
									<xs:attribute name="TIPO" type="carType" use="required">
										<xs:annotation>
											<xs:documentation>Marca,  Modelo e Categoria</xs:documentation>
										</xs:annotation>
									</xs:attribute>
									<xs:attribute name="DATAINSPEÇÃO" type="AT_Data"/>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
						<xs:attribute name="MORADA" type="xs:normalizedString" use="required"/>
					</xs:complexType>
					<xs:key name="pk_veiculo">
						<xs:selector xpath="VEÍCULO"/>
						<xs:field xpath="@MATRÍCULA"/>
					</xs:key>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
		<xs:unique name="ak_email">
			<xs:selector xpath="./*/CONTACTO"/>
			<xs:field xpath="EMAIL"/>
		</xs:unique>
		<xs:unique name="ak_telefone">
			<xs:selector xpath="./*/CONTACTO"/>
			<xs:field xpath="TELEFONE"/>
		</xs:unique>
	</xs:element>
</xs:schema>
